procedure TViewForm.FormCreate(Sender: TObject);
begin
  tmrPerBeat.Enabled := True;
  tmrPerBeat.Interval := Round((60/120) * 1000);
end;

procedure TViewForm.tmrPerBeatTimer(Sender: TObject);
begin
  pbBeatBar.StepBy(4);
  pbBeatBar.StepIt;
end;

