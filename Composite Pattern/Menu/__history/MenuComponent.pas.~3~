unit MenuComponent;

interface

uses
  System.SysUtils;

type
  TMenuComponent = class abstract
  public
    procedure Add(MenuComponent: TMenuComponent);
    procedure Remove(MenuComponent: TMenuComponent);
    function GetChild: TMenuComponent;
    function GetName: String;
    function GetPrice: Double;
    function IsVegetarian: Boolean;
    procedure Print;
    function CreateIterator: IIterator ; virtual; abstract;
  end;

implementation

{ TMenuComponent }

