program FactoryPattern;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  PizzaStoreU in 'PizzaStoreU.pas';

begin
  try
    var NYPizzaStore: TPizzaStore := TNYPizzaStore.Create;
    var ChicagoPizzaStore: TPizzaStore := TChicagoPizzaStore.Create;

    var Pizza: TPizza := NYPizzaStore.OrderPizza('cheese');
    WriteLn('Ethan ordered a ' + pizza.getName() + '\n');

    Pizza := ChicagoPizzaStore.OrderPizza('cheese');
    WriteLn('Joel ordered a ' + pizza.getName() + '\n');

		Pizza := NYPizzaStore.OrderPizza('clam');
		WriteLn('Ethan ordered a ' + pizza.getName() + '\n');

		Pizza := ChicagoPizzaStore.OrderPizza('clam');
		WriteLn('Joel ordered a ' + pizza.getName() + '\n');

		Pizza := NYPizzaStore.OrderPizza('pepperoni');
		WriteLn('Ethan ordered a ' + pizza.getName() + '\n');

		Pizza := ChicagoPizzaStore.OrderPizza('pepperoni');
		WriteLn('Joel ordered a ' + pizza.getName() + '\n');

		Pizza := NYPizzaStore.OrderPizza('veggie');
		WriteLn('Ethan ordered a ' + pizza.getName() + '\n');

		Pizza := ChicagoPizzaStore.OrderPizza('veggie');
		WriteLn('Joel ordered a '+ pizza.getName() + '\n');
    ReadLn;
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
