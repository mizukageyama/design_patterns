begin

end;

procedure TBeatModel.RemoveObserver(O: IBPMObserver);
begin

end;

procedure TBeatModel.RemoveObserver(O: IBeatObserver);
begin

end;

procedure TBeatModel.SetBPM(BPM: Integer);
begin

end;

procedure TBeatModel.TurnOff;
begin

end;

procedure TBeatModel.TurnOn;
begin
  SetBPM(90);
end;

end.
